[client]
port            = 3306
socket          = /data/dbserver/mysql/mysql.sock
[mysqld]
port            = 3306
socket          = /data/dbserver/mysql/mysql.sock
skip-external-locking
key_buffer_size = 16K
max_allowed_packet = 32M
table_open_cache = 4
sort_buffer_size = 64K
read_buffer_size = 256K
read_rnd_buffer_size = 256K
net_buffer_length = 2K
thread_stack = 128K
server-id       = 1
log-bin=mysql-bin
lower_case_table_names=1
explicit_defaults_for_timestamp=true
[mysqldump]
quick
max_allowed_packet = 1024M
[mysql]
no-auto-rehash
[myisamchk]
key_buffer_size = 8M
sort_buffer_size = 8M
[mysqlhotcopy]
interactive-timeout
